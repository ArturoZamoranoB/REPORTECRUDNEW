@model Reporte;
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">REPOR-T</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Listar">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Inventario" asp-action="Listar">Inventario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <h1 class="text-dark">Eliminar</h1>
    <div class="card col-12 col-md-8 mx-auto">
        <div class="card-header">
            Eliminar Reporte
        </div>
        <div class="card-body justify-content-center">
            <form asp-action="Eliminar" asp-controller="Reporte" method="post">
                <input asp-for="IdReporte" type="hidden" class="form-control" />
                <div class="alert alert-danger" role="alert">
                    ¿Deseas eliminar el reporte: @Html.DisplayFor(n => n.IdReporte)?
                </div>
                <div class="col-md-4 mb-3">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Listar" asp-controller="Reporte" class="btn btn-warning btn-sm mt-2">Volver a la lista</a>
                </div>

            </form>
        </div>
        <div class="col-md-14 mb-3 position-fixed bottom-0 end-0 p-5">
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">VOLVER A MENÚ</a>
        </div>
    </div>
</div>



