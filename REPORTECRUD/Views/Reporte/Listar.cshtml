@model IEnumerable<REPORTECRUD.Models.Reporte>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <!-- Tus enlaces a hojas de estilo y scripts aquí -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <header class="bg-dark text-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">REPOR-T</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Listar">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Inventario" asp-action="Listar">Inventario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1 class="text-left">Lista de Reportes</h1>
                <p>
                    <a asp-action="Guardar" asp-controller="Reporte" class="btn btn-primary btn-sm">Nuevo Reporte</a>
                </p>
            </div>
            <div class="col-lg-6 text-lg-end">
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>IdReporte</th>
                    <th>Tipo de Reporte</th>
                    <th>Ubicación</th>
                    <th>Fecha de Creación</th>
                    <th>Problemática</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdReporte)</td>
                        <td>@Html.DisplayFor(modelItem => item.refTipoReporte.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.refUbicacion.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Problematica)</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Reporte" asp-route-IdReporte="@item.IdReporte" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Reporte" asp-route-IdReporte="@item.IdReporte" class="btn btn-danger btn-sm">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md-14 mb-3 position-fixed bottom-0 end-0 p-5">
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">VOLVER A MENÚ</a>
        </div>
    </div>

    <!-- Enlaces a scripts y cierre de body y html -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
